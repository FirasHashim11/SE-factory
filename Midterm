import requests
import json
name=input("Please enter your name: ")
print("Hello",name,".Welcome to our program . \n" )
program=[]
def display():
  print("Here are the following options in our Program:\n")
  print("\t 1.Open Tab\n"
        + "\t 2.Close Tab\n"
        + "\t 3.Switch Tab\n"
        + "\t 4.Display all Tabs\n"
        + "\t 5.Open Nested Tab\n"
        + "\t 6.Clear All Tabs\n"
        + "\t 7.Save Tabs\n"
        + "\t 8.Import Tabs\n"
        + "\t 9.Exit\n")
def openTab():

  while True:
      title = input("Enter the title of the Tab you want to open or write exit to stop: ")
      if title == 'exit':
          break
      url = input("Enter the URL of the website: ")
      program.append({title : url})
  print("Tabs added successfully!\n")
  print("Your tabs are:",program)
  return program
def closeTab():
  x = input("Enter the index of the tab to close (or leave blank to close the last opened tab): ")
  if x == '':
    program.pop(len(program)-1)
    print("Last opened tab close successfully!")
    print(program)
  else:
    x = int(x)
    if  x < len(program):
        y=program.pop(x)
        print("Tab at index", x, "closed successfully!")
        print("The Closed tab is :",y)
        print("The Updated tabs are:",program)
        print("\n")
    else:
        print("Invalid index. Please try again.")
